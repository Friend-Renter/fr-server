PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=info
MONGO_URI=mongodb://localhost:27017/fr_dev
REDIS_URL=redis://localhost:6379
REDIS_NAMESPACE=fr:dev
# Auth/JWT
JWT_SECRET=dev_only_change_me
JWT_REFRESH_SECRET=dev_only_change_me_refresh
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d
JWT_ISS=fr-api
JWT_AUD=fr-clients
BCRYPT_ROUNDS=12
# KYC / Persona
KYC_PROVIDER=persona
KYC_MOCK=true                # dev default (no external calls)
PERSONA_API_KEY=             # set when KYC_MOCK=false
PERSONA_ENV=sandbox          # sandbox|production
PERSONA_TEMPLATE_ID=         # your template in Persona
PERSONA_WEBHOOK_SECRET=      # HMAC secret for signature verify

# --- Media / S3 ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1
CDN_DOMAIN=               # optional (e.g., dxxx.cloudfront.net)
S3_KEY_PREFIX=fr          # optional (defaults to "fr" if omitted)
