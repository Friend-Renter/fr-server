{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "newLine": "lf",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["test", "**/*.test.ts"]
}
